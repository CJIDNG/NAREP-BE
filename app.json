{
  "name": "NAREP Backend",
  "description": "Making data accessible",
  "repository": "https://github.com/CJIDNG/NAREP-BE/",
  "keywords": [
    "data",
    "ptcij"
  ],
  "addons": [
    "heroku-postgresql"
  ],
  "env": {
    "NPM_CONFIG_PRODUCTION": {
      "required": true
    },
    "SECRET": {
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-18",
  "scripts": {
    "postdeploy": "npx sequelize-cli db:seed:all"
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  }
}