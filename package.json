{
  "name": "narep-be",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretest": "NODE_ENV=test npm run migrate:undo && cross-env NODE_ENV=test npm run migrate && cross-env NODE_ENV=test npm run seedall",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --exit --timeout 10000  --require @babel/register ./src/tests/*",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "start": "node ./dist/server.js",
    "build": "rm -rf ./dist && babel -d ./dist ./src",
    "server": "DEBUG=dev nodemon --exec babel-node src/server.js",
    "migrate": "cross-env NODE_ENV=test && sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seedall": "sequelize db:seed:all",
    "seedall:undo": "sequelize db:seed:undo",
    "reset:db": "npm run migrate:undo && npm run migrate && npm run seedall",
    "migration": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "heroku-postbuild": "npm run migration && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CJIDNG/NAREP-BE.git"
  },
  "keywords": [
    "data"
  ],
  "author": "CJIDNG",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CJIDNG/NAREP-BE/issues"
  },
  "homepage": "https://github.com/CJIDNG/NAREP-BE#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-import-resolver-babel-module": "^5.1.2"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.0.1",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "path": "^0.12.7",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "swagger-ui-express": "^4.1.3",
    "uuid": "^7.0.0"
  },
  "nyc": {
    "exclude": [
      "./src/tests",
      "./src/database/models"
    ]
  }
}